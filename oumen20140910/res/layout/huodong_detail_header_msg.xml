<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout_root"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="@drawable/gradient_left_to_right"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/image_description"
        android:src="@drawable/huodong_hot" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/default_gap"
        android:layout_marginRight="@dimen/default_gap"
        android:layout_marginTop="@dimen/default_gap"
        android:shadowColor="@color/default_shadow"
        android:shadowDx="1"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/default_big_textsize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginRight="@dimen/padding_large"
        android:drawableLeft="@drawable/nearby_location"
        android:drawablePadding="@dimen/small_gap"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:shadowColor="@color/default_shadow"
        android:shadowDx="1"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:textColor="@color/white"
        android:textSize="@dimen/text_pretty" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/default_gap"
        android:layout_marginRight="@dimen/default_big_gap"
        android:shadowColor="@color/default_shadow"
        android:shadowDx="1"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/default_big_textsize"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/looknum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/default_gap"
        android:layout_marginRight="@dimen/default_big_gap"
        android:shadowColor="@color/default_shadow"
        android:shadowDx="1"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/default_editsize_big"
        android:visibility="gone" />

    <TextView
        android:id="@+id/sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/default_gap"
        android:layout_marginLeft="@dimen/default_gap"
        android:layout_marginTop="@dimen/padding_micro"
        android:shadowColor="@color/default_shadow"
        android:shadowDx="1"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_pretty" />

    <View
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/looknum"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/looknum"
        android:layout_marginBottom="@dimen/default_gap"
        android:layout_marginRight="@dimen/default_gap"
        android:background="@color/huodong_detail_line"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_above="@+id/sender"
        android:layout_alignLeft="@+id/sender"
        android:background="@drawable/round_white_bg"
        android:contentDescription="@string/image_description"
        android:padding="1dp"
        android:src="@drawable/user_photo" />

</RelativeLayout>