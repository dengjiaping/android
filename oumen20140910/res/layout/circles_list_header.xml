<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_bg_up"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/user_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/circle_list_header_height"
        android:background="@drawable/oumen_title_background" >

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:indeterminateDrawable="@drawable/progress_circular"
            android:layout_marginLeft="@dimen/padding_super"
            android:layout_marginTop="70dp"/>

        <ImageView
            android:id="@+id/photo"
            android:layout_width="@dimen/big_photo_size"
            android:layout_height="@dimen/big_photo_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/padding_large"
            android:background="@drawable/rect_huodong_list_mv_bg"
            android:contentDescription="@string/image_description"
            android:padding="@dimen/padding_micro"
            android:src="@drawable/user_photo" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/photo"
            android:layout_toLeftOf="@+id/photo"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/info"
            android:layout_marginBottom="@dimen/default_gap"
            android:layout_marginLeft="@dimen/default_gap"
            android:layout_toLeftOf="@+id/photo"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_medium" />

    </RelativeLayout>

    <Button
        android:id="@+id/banner_message"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/circle_notice_default"
        android:drawableRight="@drawable/center_arrow"
        android:drawablePadding="@dimen/padding_small"
        android:padding="@dimen/padding_medium"
        android:scaleType="fitXY"
        android:textColor="@color/white"
        android:textSize="@dimen/default_editsize"
        android:layout_margin="@dimen/padding_large"
        android:text="aaa"
        android:singleLine="true" />

</LinearLayout>