<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/black"
    >

    <ImageView
        android:id="@+id/notify_imageLog"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon"
        android:layout_gravity="center" 
        android:padding="@dimen/small_gap"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/notify_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/small_gap"
            android:singleLine="true"
            android:text="name"
            android:layout_toLeftOf="@+id/notify_time"
            android:textColor="@color/white"
            android:textSize="20sp" />
           <TextView
            android:id="@+id/notify_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notify_name"
            android:paddingLeft="@dimen/small_gap"
            android:paddingRight="@dimen/default_gap"
            android:text="msg"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/default_editsize_small" />

           <TextView
               android:id="@+id/notify_time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_alignParentTop="true"
               android:paddingLeft="@dimen/small_gap"
               android:paddingRight="@dimen/default_gap"
               android:singleLine="true"
               android:text="time"
               android:textColor="@color/white"
               android:textSize="@dimen/default_editsize" />

    </RelativeLayout>
</LinearLayout>