<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:paddingLeft="@dimen/padding_large"
    android:paddingRight="@dimen/padding_large"
    android:paddingTop="@dimen/padding_large" >

    <com.oumen.widget.image.shape.RoundRectangleImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.oumen.activity.detail.cell.HeaderMsgView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.oumen.activity.widget.ActivityProgressBar
        android:id="@+id/progress_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/finish_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_corner_translucent_bg"
        android:visibility="gone" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/image_description"
            android:src="@drawable/huodong_finish_label" />
    </FrameLayout>

</FrameLayout>