<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <com.oumen.widget.image.shape.RoundRectangleImageView
        android:id="@+id/applyer_photo"
        android:layout_width="@dimen/medium_photo_size"
        android:layout_height="@dimen/medium_photo_size"
        android:contentDescription="@string/image_description"
        android:src="@drawable/rectangle_photo"/>

    <TextView
        android:id="@+id/applyer_name"
        android:layout_width="@dimen/medium_photo_size"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="@color/default_text_bg"
        android:textSize="@dimen/default_editsize_tosmall"/>

</LinearLayout>