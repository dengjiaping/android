<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/padding_large"
    android:layout_marginRight="@dimen/padding_large"
    android:layout_marginTop="@dimen/padding_large"
    android:background="@drawable/white_bg_stroke" >

    <com.oumen.activity.detail.RectImageHasDownloadView
        android:id="@+id/huodong_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_large"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large"
        android:singleLine="true"
        android:text="活动名称"
        android:textColor="@color/default_text_bg"
        android:textSize="@dimen/text_large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1.0"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:drawableLeft="@drawable/search_location"
            android:singleLine="true"
            android:textColor="@color/default_text_bg"
            android:textSize="@dimen/text_pretty" />

        <TextView
            android:id="@+id/money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:paddingRight="@dimen/padding_large"
            android:paddingBottom="@dimen/padding_small"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/detail_orange"
            android:textSize="@dimen/text_medium" />
    </LinearLayout>

</LinearLayout>